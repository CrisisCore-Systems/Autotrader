# Lightweight development environment - no Docker required!
# Copy this file to `.env` when running locally on a resource-constrained machine.

# Application configuration
ENVIRONMENT=lightweight
API_HOST=127.0.0.1
API_PORT=8000
LOG_LEVEL=INFO

# Use SQLite instead of Postgres (no Docker required!)
USE_SQLITE=true
SQLITE_DB_PATH=./artifacts/autotrader.db

# Disable services that require Docker
REDIS_ENABLED=false
KAFKA_ENABLED=false
MINIO_ENABLED=false

# Local file-based experiment tracking (no MLflow server needed)
MLFLOW_TRACKING_URI=file:./mlruns
MLFLOW_BACKEND_STORE_URI=sqlite:///./mlruns/mlflow.db

# Notifications (optional - can be left blank for local dev)
SLACK_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Optional broker/API integrations
OPENAI_API_KEY=
GROQ_API_KEY=
ETHERSCAN_API_KEY=
COINGECKO_API_KEY=

# Broker credentials (for paper trading)
IBKR_CLIENT_ID=0
IBKR_PORT=7497
IBKR_PAPER_TRADING=true

# Feature flags for lightweight mode
ENABLE_METRICS_SERVER=false
ENABLE_PREFECT=false
ENABLE_GRAFANA=false
