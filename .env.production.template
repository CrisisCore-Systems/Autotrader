# Production Environment Configuration Template
# Copy to .env.production; populate only the secrets required for your deployment

# === Database Configuration ===
POSTGRES_USER=crisiscore
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=autotrader
DATABASE_URL=postgresql://crisiscore:CHANGE_ME_STRONG_PASSWORD@postgres:5432/autotrader

# === LLM API Keys ===
# Optional: required only when enabling Groq/OpenAI powered narrative features
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# === Milvus Configuration ===
MILVUS_HOST=vector
MILVUS_PORT=19530

# === Data Directory (for volume mounts) ===
DATA_DIR=/var/lib/autotrader

# === Monitoring ===
GRAFANA_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# === Application Settings ===
LOG_LEVEL=INFO
ENVIRONMENT=production
DEBUG=false

# === Worker Service ===
WORKER_LOG_LEVEL=INFO
WORKER_METRICS_PORT=9100
INGESTION_CONFIG=/app/configs/ingestion.yaml
INGESTION_DB_PATH=/app/artifacts/worker.db

# === Rate Limiting ===
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# === Security ===
SECRET_KEY=CHANGE_ME_RANDOM_SECRET_KEY
ALLOWED_HOSTS=api.yourdomain.com,localhost

# === Feature Flags ===
ENABLE_BACKTEST=true
ENABLE_LLM_FALLBACK=true
ENABLE_METRICS_COLLECTION=true

# === Cost Limits (USD) ===
LLM_DAILY_COST_LIMIT=50.0
LLM_MONTHLY_COST_LIMIT=1000.0

# === Alert Configuration ===
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
PAGERDUTY_KEY=your_pagerduty_integration_key
