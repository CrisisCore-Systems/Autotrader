{
  "dashboard": {
    "title": "AutoTrader - System Metrics",
    "tags": ["autotrader", "system", "infrastructure"],
    "timezone": "UTC",
    "schemaVersion": 30,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "avg(rate(container_cpu_usage_seconds_total{service=\"trading\"}[5m])) * 100",
            "legendFormat": "Trading Service CPU %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "max": 100, "min": 0},
          {"format": "short"}
        ],
        "thresholds": [
          {"value": 70, "colorMode": "warning"},
          {"value": 90, "colorMode": "critical"}
        ]
      },
      {
        "id": 2,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "container_memory_usage_bytes{service=\"trading\"} / container_spec_memory_limit_bytes{service=\"trading\"} * 100",
            "legendFormat": "Trading Service Memory %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "max": 100, "min": 0},
          {"format": "short"}
        ],
        "thresholds": [
          {"value": 80, "colorMode": "warning"},
          {"value": 95, "colorMode": "critical"}
        ]
      },
      {
        "id": 3,
        "title": "Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{service=\"trading\"}[1m]))",
            "legendFormat": "Requests/sec",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "min": 0},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{service=\"trading\",status=~\"5..\"}[1m])) / sum(rate(http_requests_total{service=\"trading\"}[1m])) * 100",
            "legendFormat": "Error Rate %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "max": 5, "min": 0},
          {"format": "short"}
        ],
        "thresholds": [
          {"value": 0.5, "colorMode": "warning"},
          {"value": 1.0, "colorMode": "critical"}
        ],
        "alert": {
          "name": "High Error Rate",
          "conditions": [
            {
              "evaluator": {"params": [1.0], "type": "gt"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "frequency": "1m",
          "handler": 1,
          "message": "Error rate above 1%",
          "noDataState": "no_data",
          "executionErrorState": "alerting"
        }
      },
      {
        "id": 5,
        "title": "Latency (p50, p95, p99)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{service=\"trading\"}[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{service=\"trading\"}[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket{service=\"trading\"}[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "ms", "min": 0},
          {"format": "short"}
        ],
        "thresholds": [
          {"value": 100, "colorMode": "warning"},
          {"value": 200, "colorMode": "critical"}
        ]
      },
      {
        "id": 6,
        "title": "Database Connections",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "pg_stat_activity_count",
            "legendFormat": "Active Connections",
            "refId": "A"
          },
          {
            "expr": "pg_settings_max_connections",
            "legendFormat": "Max Connections",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "min": 0},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Disk Usage",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "(node_filesystem_size_bytes - node_filesystem_free_bytes) / node_filesystem_size_bytes * 100",
            "refId": "A"
          }
        ],
        "options": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 70, "color": "yellow"},
              {"value": 85, "color": "red"}
            ]
          }
        }
      },
      {
        "id": 8,
        "title": "Network I/O",
        "type": "graph",
        "gridPos": {"h": 8, "w": 18, "x": 6, "y": 24},
        "targets": [
          {
            "expr": "rate(container_network_receive_bytes_total{service=\"trading\"}[5m])",
            "legendFormat": "Received",
            "refId": "A"
          },
          {
            "expr": "rate(container_network_transmit_bytes_total{service=\"trading\"}[5m])",
            "legendFormat": "Transmitted",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "Bps", "min": 0},
          {"format": "short"}
        ]
      }
    ]
  }
}
